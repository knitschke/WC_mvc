@model WC_mvc.Models.CountryListModel
@{
    ViewBag.Title = "Index";
    

}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div style="text-align:center">
    <h2>List of scorers from each country:</h2>
</div>

<div style="text-align: center; align-items:center;">
    <br />
    <button value="Refresh Page" onClick="window.location.reload();" class="block">Next country</button>
    <br />

</div>

<div class="container" style="width:auto; align-content:center">
    @if (Model != null)
    {
        <u1 class="list-group">
            <li class="list-group-item active">Country info</li>
            <li class="list-group-item">CountryID: <b>@Model.Country_Id</b>, CountryName: <b>@Model.Name</b></li>

        </u1>

        <u1 class="list-group">
            <li class="list-group-item active">List of scorers</li>

            @for (int i = 0; Model.counter > i; i++)
            {

                <li class="list-group-item">ScorerID:  <b>@Model.Scorer_Id[i]</b>, Surname: <b>@Model.Surname[i]</b></li>

            }

        </u1>
    }


</div>
